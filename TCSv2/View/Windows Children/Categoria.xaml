<Window x:Class="TCSv2.View.Windows_Children.Categoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCSv2.View.Windows_Children"
        mc:Ignorable="d"
        Title="Categoria" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <StackPanel Background="Azure" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Name="btnListado" Content="Listado" Margin="5 0 5 0" Click="BtnListado_Click"/>
                <Button Name="btnCategoria" Content="Mantenimiento" Click="BtnCategoria_Click"/>
            </StackPanel>
            
        </Border>
        <Border Name="PanelListado" Grid.Row="1" Visibility="Hidden">
            <Grid Background="Green">
                
            </Grid>
        </Border>
        <Border Name="PanelMantenimiento" Grid.Row="1" Visibility="Hidden">
            <Grid Background="Crimson">

            </Grid>
        </Border>
    </Grid>
</Window>
